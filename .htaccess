
#### 그누보드5 rewrite BEGIN #####
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# 실제 파일/폴더가 있으면 그대로 처리
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ============================================
# SEO 고도화 URL 라우팅 (오늘로또)
# 모든 URL에 "로또" 키워드 포함
# ============================================

# 동적 Sitemap
RewriteRule ^sitemap\.xml$ sitemap.php [L]
RewriteRule ^sitemap-main\.xml$ sitemap.php?type=main [L]
RewriteRule ^sitemap-stores\.xml$ sitemap.php?type=stores [L]
RewriteRule ^sitemap-draws\.xml$ sitemap.php?type=draws [L]
RewriteRule ^sitemap-numbers\.xml$ sitemap.php?type=numbers [L]

# 인덱스 페이지들 (로또 키워드 포함)
RewriteRule ^로또-분석/?$ seo/analysis.php [QSA,L]
RewriteRule ^로또-통계/?$ seo/stats.php [QSA,L]
RewriteRule ^로또-랭킹/?$ seo/ranking.php?type=stores [QSA,L]
RewriteRule ^로또-가이드/?$ seo/guide.php [QSA,L]
RewriteRule ^로또-번호/?$ seo/number.php?num=1 [QSA,L]
RewriteRule ^로또-도구/?$ seo/tools.php [QSA,L]
RewriteRule ^로또-비교/?$ seo/compare.php [QSA,L]

# 번호별 통계 페이지: /로또-번호/7/
RewriteRule ^로또-번호/([0-9]+)/?$ seo/number.php?num=$1 [QSA,L]

# 로또 당첨번호: /로또-당첨번호/1202회/ 또는 /로또-당첨번호/1202/
RewriteRule ^로또-당첨번호/([0-9]+)회/?$ draw/index.php?round=$1 [QSA,L]
RewriteRule ^로또-당첨번호/([0-9]+)/?$ draw/index.php?round=$1 [QSA,L]

# 회차별 당첨점: /로또-당첨번호/1202/당첨점/
RewriteRule ^로또-당첨번호/([0-9]+)/당첨점/?$ seo/draw-winners.php?round=$1 [QSA,L]

# 회차별 당첨금: /로또-당첨번호/1202/당첨금/
RewriteRule ^로또-당첨번호/([0-9]+)/당첨금/?$ seo/draw-prize.php?round=$1 [QSA,L]

# 로또 판매점: /로또-판매점/서울/강남구/역삼동/대박복권-123/
RewriteRule ^로또-판매점/?$ stores/index.php [QSA,L]
RewriteRule ^로또-판매점/([^/]+)/([^/]+)/([^/]+)/([^/]+)/?$ seo/store-detail.php?r1=$1&r2=$2&r3=$3&store=$4 [QSA,L]
RewriteRule ^로또-판매점/([^/]+)/([^/]+)/([^/]+)/?$ seo/stores-dong.php?r1=$1&r2=$2&r3=$3 [QSA,L]
RewriteRule ^로또-판매점/([^/]+)/([^/]+)/?$ stores/index.php?region1=$1&region2=$2 [QSA,L]
RewriteRule ^로또-판매점/([^/]+)/?$ stores/index.php?region1=$1 [QSA,L]

# 로또 분석: /로또-분석/홀짝/
RewriteRule ^로또-분석/([^/]+)/?$ seo/analysis.php?type=$1 [QSA,L]

# 로또 통계: /로또-통계/자동수동/
RewriteRule ^로또-통계/([^/]+)/?$ seo/stats.php?type=$1 [QSA,L]

# 로또 랭킹: /로또-랭킹/명당/ /로또-랭킹/당첨금/
RewriteRule ^로또-랭킹/([^/]+)/?$ seo/ranking.php?type=$1 [QSA,L]

# 로또 가이드: /로또-가이드/세금/ /로또-가이드/구매방법/
RewriteRule ^로또-가이드/([^/]+)/?$ seo/guide.php?type=$1 [QSA,L]

# 로또 가이드 3단계: /로또-가이드/세금/1등/
RewriteRule ^로또-가이드/([^/]+)/([^/]+)/?$ seo/guide-detail.php?type=$1&sub=$2 [QSA,L]

# 연도별 페이지: /로또-당첨번호/2024년/
RewriteRule ^로또-당첨번호/([0-9]+)년/?$ seo/lotto-year.php?year=$1 [QSA,L]
RewriteRule ^로또-당첨번호/([0-9]+)년/([0-9]+)월/?$ seo/lotto-year.php?year=$1&month=$2 [QSA,L]

# 로또 비교: /로또-비교/1201-vs-1202/
RewriteRule ^로또-비교/([0-9]+)-vs-([0-9]+)/?$ seo/compare.php?r1=$1&r2=$2 [QSA,L]

# 로또 도구: /로또-도구/세금-계산기/
RewriteRule ^로또-도구/([^/]+)/?$ seo/tools.php?type=$1 [QSA,L]

# ============================================
# 롱테일 SEO 페이지
# ============================================

# 이번주 로또: /로또-당첨번호/이번주/
RewriteRule ^로또-당첨번호/이번주/?$ seo/this-week.php [QSA,L]

# 로또 확률: /로또-가이드/1등-확률/
RewriteRule ^로또-가이드/1등-확률/?$ seo/probability.php [QSA,L]
RewriteRule ^로또-가이드/당첨-확률/?$ seo/probability.php [QSA,L]

# 자동 vs 수동: /로또-통계/자동-수동-비교/
RewriteRule ^로또-통계/자동-수동-비교/?$ seo/auto-vs-manual.php [QSA,L]
RewriteRule ^로또-통계/자동수동/?$ seo/auto-vs-manual.php [QSA,L]

# 무료 번호 생성기: /로또-도구/무료-번호-생성/
RewriteRule ^로또-도구/무료-번호-생성/?$ seo/tools.php?type=번호-생성기 [QSA,L]

# 당첨금 지급 절차: /로또-가이드/당첨금-지급-절차/
RewriteRule ^로또-가이드/당첨금-지급/?$ seo/guide.php?type=수령방법 [QSA,L]
RewriteRule ^로또-가이드/당첨금-지급-절차/?$ seo/guide.php?type=수령방법 [QSA,L]

# ============================================
# 기존 URL 리다이렉트 (301 영구 이동) - 백링크 보존
# ============================================
RewriteRule ^stores/?$ /로또-판매점/ [R=301,L]
RewriteRule ^stores/(.*)$ /로또-판매점/$1 [R=301,L]
RewriteRule ^analysis/?$ /로또-분석/ [R=301,L]
RewriteRule ^analysis/(.*)$ /로또-분석/$1 [R=301,L]
RewriteRule ^stats/?$ /로또-통계/ [R=301,L]
RewriteRule ^stats/(.*)$ /로또-통계/$1 [R=301,L]
RewriteRule ^ranking/?$ /로또-랭킹/ [R=301,L]
RewriteRule ^ranking/(.*)$ /로또-랭킹/$1 [R=301,L]
RewriteRule ^guide/?$ /로또-가이드/ [R=301,L]
RewriteRule ^guide/(.*)$ /로또-가이드/$1 [R=301,L]
RewriteRule ^number/?$ /로또-번호/ [R=301,L]
RewriteRule ^number/(.*)$ /로또-번호/$1 [R=301,L]
RewriteRule ^tools/?$ /로또-도구/ [R=301,L]
RewriteRule ^tools/(.*)$ /로또-도구/$1 [R=301,L]
RewriteRule ^compare/?$ /로또-비교/ [R=301,L]
RewriteRule ^compare/(.*)$ /로또-비교/$1 [R=301,L]
RewriteRule ^lotto/(.*)$ /로또-당첨번호/$1 [R=301,L]

# ============================================
RewriteRule ^shop/list-([0-9a-z]+)$  shop/list.php?ca_id=$1&rewrite=1  [QSA,L]
RewriteRule ^shop/type-([0-9a-z]+)$  shop/listtype.php?type=$1&rewrite=1  [QSA,L]
RewriteRule ^shop/([0-9a-zA-Z_\-]+)$  shop/item.php?it_id=$1&rewrite=1  [QSA,L]
RewriteRule ^shop/([^/]+)/$  shop/item.php?it_seo_title=$1&rewrite=1  [QSA,L]
RewriteRule ^content/([0-9a-zA-Z_]+)$ bbs/content.php?co_id=$1&rewrite=1 [QSA,L]
RewriteRule ^content/([^/]+)/$ bbs/content.php?co_seo_title=$1&rewrite=1 [QSA,L]
RewriteRule ^rss/([0-9a-zA-Z_]+)$ bbs/rss.php?bo_table=$1 [QSA,L]
RewriteRule ^([0-9a-zA-Z_]+)$ bbs/board.php?bo_table=$1&rewrite=1 [QSA,L]
RewriteRule ^([0-9a-zA-Z_]+)/([^/]+)/$ bbs/board.php?bo_table=$1&wr_seo_title=$2&rewrite=1 [QSA,L]
RewriteRule ^([0-9a-zA-Z_]+)/write$ bbs/write.php?bo_table=$1&rewrite=1 [QSA,L]
RewriteRule ^([0-9a-zA-Z_]+)/([0-9]+)$ bbs/board.php?bo_table=$1&wr_id=$2&rewrite=1 [QSA,L]
</IfModule>
#### 그누보드5 rewrite END #####
